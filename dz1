#include <iostream>
#include <string>
#include <algorithm>

struct Product {
    std::string name;
    int quantity;
    double price;
};

bool compareNames(const Product& p1, const Product& p2) {
    return p1.name < p2.name;
}

int main() {
    int numProducts;
    
    std::cout << "Введите количество проданных товаров: ";
    std::cin >> numProducts;
    
    Product* products = new Product[numProducts];
    
    for (int i = 0; i < numProducts; i++) {
        std::cout << "Введите название товара " << i+1 << ": ";
        std::cin >> products[i].name;
        
        std::cout << "Введите количество проданных единиц товара " << products[i].name << ": ";
        std::cin >> products[i].quantity;
        
        std::cout << "Введите цену за единицу товара " << products[i].name << ": ";
        std::cin >> products[i].price;
    }
    
    double totalSales = 0;
    
    for (int i = 0; i < numProducts; i++) {
        totalSales += products[i].quantity * products[i].price;
    }
    
    double averagePrice = totalSales / numProducts;
    
    std::sort(products, products + numProducts, compareNames);
    
    std::cout << "Отсортированный список товаров:" << std::endl;
    
    for (int i = 0; i < numProducts; i++) {
        std::cout << i+1 << ". " << products[i].name << " - Количество: " << products[i].quantity << ", Цена за единицу: " << products[i].price << std::endl;
    }
    
    std::cout << "Общая сумма продаж: " << totalSales << std::endl;
    std::cout << "Средняя цена за единицу товара: " << averagePrice << std::endl;
    
    delete[] products;
    
    return 0;
}
